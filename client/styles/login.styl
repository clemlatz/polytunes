.login-container
    left 50%
    margin auto
    position absolute
    top 50%
    transform translate(-50%, -50%)
    width: 100%;

#login-form
    box-sizing border-box

#login-form input,
#login-form button
    background-color black
    border 1px solid rgba(255, 255, 255, .5)
    box-sizing: border-box;
    color white
    margin 10px
    padding 5px
    width 200px
