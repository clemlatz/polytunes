table {
  margin: auto;
  border-spacing: 7px;
  
  td {
    width: 21px;
    height: 21px;
    border: 1px solid;
    background: white;
    opacity:  0.15;
    cursor: pointer;
    // transition-delay: .5s;
    
    &:hover {
      opacity: 0.1;
    }
    
    &.around {
      opacity: 0.3;
    }
    
    &.active {
      opacity:  0.5;
      
      &:hover {
        opacity: 0.4;
      }
    }
    
    &.playing {
      opacity:  1;
      transition-property: opacity;
      transition-duration: .25s;
    }
    
    &.delay {
      transition-property: opacity;
      transition-delay: .25s;
    }
  }
}


/* Smaller than tablets */
@media (max-width: 767px) {
  td {
    width: 12px;
    height: 12px;
  }
  .controls {
    width: 100%;
  }
}
