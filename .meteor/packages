fortawesome:fontawesome   # Add font-awesome icons
meyerweb-reset            # CSS Reset
iron:router               # Router
flowkey:hotkeys           # Keyboard shortcuts
gwendall:body-events      # Allow to set events on body
iwazaru:synth             # WebAudio API library
okgrow:analytics          # Analytics
tap:i18n                  # Internationalization
chrismbeckett:toastr      # Notifications

